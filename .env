# Description:
# This file defines all environment variables used by the
# Enhanced Calculator application. These values are loaded
# automatically by python-dotenv through CalculatorConfig
# ----------------------------------------------------------

# ==========================================================
#  DIRECTORY CONFIGURATION
# ==========================================================
# Directories for storing logs and history data.
CALCULATOR_LOG_DIR=logs
CALCULATOR_HISTORY_DIR=history

# ==========================================================
#  HISTORY MANAGEMENT SETTINGS
# ==========================================================
# Automatically save calculation history after each operation.
CALCULATOR_AUTO_SAVE=true

# Maximum number of stored calculations before trimming.
CALCULATOR_MAX_HISTORY_SIZE=100

# ==========================================================
#  CALCULATION PARAMETERS
# ==========================================================
# Number of decimal places for result precision.
CALCULATOR_PRECISION=9

# Maximum allowed input value to prevent overflow.
CALCULATOR_MAX_INPUT_VALUE=100000

# Default text encoding for file I/O operations.
CALCULATOR_DEFAULT_ENCODING=utf-8

# ==========================================================
#  ENVIRONMENT SETTINGS
# ==========================================================
CALCULATOR_ENV=development
