{
    // ============================================================
    //  VS CODE DEBUG CONFIGURATION
    // ============================================================
    "version": "0.2.0",
    "configurations": [
        {
            // --------------------------------------------------------
            // 1. RUN THE MAIN APPLICATION (Calculator REPL)
            // --------------------------------------------------------
            "name": "Run Calculator (main.py)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "ENV": "development"
            }
        },
        {
            // --------------------------------------------------------
            // 2. DEBUG ANY PYTHON FILE (CURRENTLY OPEN)
            // --------------------------------------------------------
            "name": "Debug Current Python File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            // --------------------------------------------------------
            // 3. DEBUG PYTEST TESTS (RUN ALL TESTS UNDER /tests)
            // --------------------------------------------------------
            "name": "Debug Pytest (tests/)",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests",
                "--maxfail=1",
                "--disable-warnings",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "ENV": "test"
            }
        }
    ]
}